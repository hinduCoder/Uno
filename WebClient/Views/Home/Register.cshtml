@using System.Web.Optimization
@model global::WebClient.Models.RegisterViewModel
@{
    Layout = "~/_Layout.cshtml";
    Page.Title = LocalRes.Registration;
}

@section head {
    @Scripts.Render("~/Scripts/Register.js")
}

<div>
    @using (@Html.BeginForm("SignUp", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label for="inputUsername" class="col-sm-2 control-label">@LocalRes.Login</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(rvm => rvm.Username, new { @class = "form-control", id = "inputUsername" })
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword" class="col-sm-2 control-label">@LocalRes.Password</label>
            <div class="col-sm-10">
                @Html.PasswordFor(rvm => rvm.Password, new { @class = "form-control", id = "inputPassword" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" id="btn-singup" class="btn btn-default">@LocalRes.SignUp</button>
            </div>
        </div>
    }
</div>
